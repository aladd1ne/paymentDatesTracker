{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Payment Dates</div>

                    <div class="card-body">
                        <form action="{{ path('generate_payroll') }}" method="POST">
                            <input type="hidden" name="paymentDates" value="{{ paymentDates|json_encode|e('html_attr') }}">
                            <button type="submit" class="btn btn-success mb-3">Download CSV</button>
                        </form>

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Month</th>
                                <th>Base Salary Payment Date</th>
                                <th>Bonus Payment Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for paymentDate in paymentDates %}
                                <tr>
                                    <td>{{ paymentDate[0] }}</td>
                                    <td>{{ paymentDate[1] }}</td>
                                    <td>{{ paymentDate[2] }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
{% endblock %}
